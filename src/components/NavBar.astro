---
// Libraries
import { Image } from 'astro:assets';
import logoImg from "../assets/logo.png"

// Data
import navData from "../data/navData"

// Components 
import Link from "../components/Link.astro"

// Variables
const repoBase = (path: string) =>
  `${import.meta.env.BASE_URL}${path.replace(/^\//, "/")}`;
---
  <nav>
    <div class ="navbar">
      <a href="/" class="'logo">
        <Image class="hover:shadow-[0px_0px_18px_7px_rgba(255,255,255,0.2)]" src={logoImg} width='100' height='100' alt="Logo" loading={'eager'}>
      </a>
      <ul class="nav-links">
        {
          navData.map((item) => (<Link href={repoBase(item.path)}>{item.name}</Link>))
        }
      </ul>
    </div>
	</nav>

<style>
  .navbar {
    display: flex;             
    align-items: center;       
    background-color: #131b20;
    gap: 20px;
    justify-content: flex-start; 
  }

  .nav-links {
  display: flex;             
  list-style: none;
  gap: 20px;                 
  margin: 0;
  padding: 0;
}

</style>


